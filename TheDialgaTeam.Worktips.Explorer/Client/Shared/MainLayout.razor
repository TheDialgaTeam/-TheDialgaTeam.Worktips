@inherits LayoutComponentBase

<Layout>
	<LayoutHeader>
		<Container>
			<Bar Breakpoint="Breakpoint.Desktop" CollapseMode="BarCollapseMode.Hide" Background="Background.Primary">
				<BarBrand>
					<Figure Size="FigureSize.Is32x32" Margin="Margin.Is3.FromLeft.Is0.FromBottom">
						<FigureImage Source="images/worktips-logo.png" AlternateText="Worktips Logo" />
					</Figure>
				</BarBrand>
				<BarToggler/>
				<BarMenu>
					<BarStart>
						<BarItem Margin="Margin.Is3.FromLeft">
							<BarLink To="/"><Icon Name="@("fas fa-dice-d6")"/> Block Explorer</BarLink>
						</BarItem>
					</BarStart>
				</BarMenu>
			</Bar>
		</Container>
	</LayoutHeader>
	<LayoutContent Padding="Padding.Is3.FromTop.Is3.FromBottom">
		<Container>
			@Body
		</Container>
	</LayoutContent>
	<LayoutFooter>
